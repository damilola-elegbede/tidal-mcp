[bandit]
exclude_dirs = ["tests", "examples", ".venv", "venv", "node_modules"]
skips = ["B101", "B601"]  # Skip assert_used_in_tests and shell_command_with_shell_equals_true in tests

# Security baseline configuration for Tidal MCP
[bandit.blacklist_imports]
bad_imports = ["Crypto", "pickle", "cPickle", "subprocess"]

[bandit.blacklist_calls]
bad_calls = ["eval", "exec", "execfile", "compile"]

# Test-specific exclusions
[bandit.assert_used]
exclude = ["*/tests/*", "*/test_*.py"]

# Skip hardcoded password detection for test files
[bandit.hardcoded_password_string]
exclude = ["*/tests/*", "*/test_*.py", "*/conftest.py"]